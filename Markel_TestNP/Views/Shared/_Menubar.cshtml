@inject MarkelDBContext db

@{
    var pages = db.PageContent.ToList();

}
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <a class="navbar-brand"  href="/Home/Index">
            <img class="img img-responsive" src="~/images/markel_direct_logo.svg" alt="Markel" />
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav flex-grow-1">
               
                @foreach (var item in pages)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="@(item.PageUrl+"?id="+item.PageId)">@item.MenuText</a>
                    </li>
                }
               
            </ul>
        </div>
    </div>
</nav>
