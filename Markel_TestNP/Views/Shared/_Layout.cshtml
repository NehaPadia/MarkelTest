<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <partial name="_Menubar">
    </header>
    @if (IsSectionDefined("banner"))
    {
        <div class="container-fluid noPadding banner">
            @RenderSection("banner", required: false)
        </div>
    }
    <div class="container-fluid noPadding" style="background-image:url(@(ViewData["bannerBG"]!=null?ViewData["bannerBG"]:"/images/markel-direct-low-premiums-high-standards-2.jpg"))">
        <div class="container col-xs-12 headerTitle">
            <h1>
                @ViewData["Title"]
            </h1>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>
    <partial name="_Footer">

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
